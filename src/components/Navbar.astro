---
const links = [
  { name: "Inicio", href: "/" },
  { name: "Servicios", href: "/services" },
  { name: "Portafolio", href: "/portfolio" },
  { name: "Nosotros", href: "/about" },
  { name: "Contacto", href: "/contact" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 bg-white shadow-md">
  <div class="max-w-7xl mx-auto px-3 py-4 flex items-center justify-between">
    <!-- Logo (placeholder) -->
    <a href="#" class="text-2xl font-bold text-gray-800 cursor-pointer">
      <img
        src="/logo-navbar.png"
        alt="Zentrix Innovate"
        class="h-14 w-auto duration-200 hover:scale-110"
      />
    </a>

    <!-- Links + CTA (desktop) -->
    <div class="hidden md:flex items-center gap-20">
      <ul class="flex gap-12">
        {
          links.map((link) => (
            <li
              class="hover:scale-115 
            transition-all duration-200 ease-in-out"
            >
              <a
                href={link.href}
                class="hover:text-blue-600 font-sans transition-colors"
              >
                {link.name}
              </a>
            </li>
          ))
        }
      </ul>
      <!-- CTA Button -->
      <a
        href="#"
        class="ml-4 px-4 py-2 rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors"
      >
        Comienza tu proyecto
      </a>
    </div>

    <!-- Botón hamburguesa (mobile) -->
    <button
      id="menu-btn"
      class="block md:hidden text-gray-700 focus:outline-none cursor-pointer text-2xl"
    >
      ☰
    </button>
  </div>

  <!-- Menú desplegable (mobile) -->
  <div id="mobile-menu" class="hidden flex-col px-4 pb-4 md:hidden">
    {
      links.map((link) => (
        <a
          href={link.href}
          class="py-2 border-b border-gray-200 hover:text-blue-600 transition-colors"
        >
          {link.name}
        </a>
      ))
    }
    <!-- CTA Button en mobile -->
    <a
      href="#"
      class="mt-4 px-4 py-2 text-center rounded-lg bg-blue-600 text-white font-semibold hover:bg-blue-700 transition-colors"
    >
      Comienza tu proyecto
    </a>
  </div>
</nav>

<script>
  const btn = document.querySelector("#menu-btn");
  const menu = document.querySelector("#mobile-menu");
  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>
